<%- include ("../partials/head") %>
<%- include ("../partials/nav") %>
<%- include ("../partials/success-msg") %>  

<div class="container p-4">
    <div class="row">
        <% if (links.length > 0 ) { %>
        <% links.forEach((e) => { %>
            <div class="col-md-3">
                <div class="card text-center">
                    <div class="card-body">
                        <a href="<%= e.url %>" target="_blank">
                            <h3 class="card-title text-uppercase">
                                <%= e.titulo %>
                            </h3>
                        </a>
                        <p class="m-2"><%= e.descripcion %></p>
                        <p class="m-2"><%= e.created_at %></p>
                        <a href="/links/delete/<%= e.id %>" class="btn btn-danger">Borrar</a>
                        <a href="/links/edit/<%= e.id %>" class="btn btn-secondary">Editar</a>
                    </div>
                </div>
            </div>
        <% }) %>
        <% } else { %>
            <div class="col-md-4 mx-auto">
                <div class="card card-body text-center">
                    <p>No hay links guardados</p>
                    <a href="/links/add">Crea uno!!</a>
                </div>
            </div>
        <% } %>
    </div>
</div>
<%- include ("../partials/footer") %>
